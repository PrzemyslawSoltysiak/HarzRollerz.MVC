@model HarzRollerz.MVC.Models.Entities.Canary

@{
    ViewData["Title"] = Model.RingNumber;
}

<div class="container mt-5 border w-75">
    <div class="row p-3 bg-light">
        <h2 class="col pt-2 px-4">Canary's Details</h2>
        <div class="col-auto mx-3 my-auto">
            <a asp-controller="Breeders" asp-action="Details" asp-route-id="@Model.OwnerID">Back to Owner</a>
        </div>
    </div>
    <div class="row px-3 py-5">
        <div class="col-auto">
            <div class="mx-3 bg-dark bg-opacity-50" style="width: 200px; height:200px;"></div>
        </div>
        <div class="col ms-3">
            @if (!String.IsNullOrEmpty(Model.Name))
            {
                <h3>@Model.Name</h3>
                <h5 class="mt-3">Ring Number: @Model.RingNumber</h5>
            }
            else
            {
                <h3>@Model.RingNumber</h3>
            }
        </div>
    </div>
    <div class="row px-5 pt-5 pb-4 bg-light">
        <h3 class="col">Collections</h3>
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">Competition</th>
                    <th>Cage Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cage in Model.Cages)
                {
                    <tr>
                        <td class="ps-3">@cage.Collection.Competition.String</td>
                        <td class="text-center">@cage.Number</td>
                        <td>
                            <a asp-controller="Collections" asp-action="Details" asp-route-id="@cage.CollectionID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
