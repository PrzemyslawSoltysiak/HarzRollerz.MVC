@model HarzRollerz.MVC.Models.Entities.Breeder

@{
    ViewData["Title"] = "Register Breeder";
}

<div class="container col-lg-8 col-xl-6 mx-auto mt-4">
    <h2>Register Breeder</h2>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-12">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-12 mt-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" onchange="onLastNameChangeAsync(this)" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group mt-4 text-end">
            <a asp-action="Index" class="my-auto me-3 align-baseline">Back to List</a> |
            <input type="submit" value="Register" class="btn btn-primary align-baseline ms-3" />
            
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
