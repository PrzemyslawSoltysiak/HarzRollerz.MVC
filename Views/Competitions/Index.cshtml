@model IEnumerable<HarzRollerz.MVC.Models.Competitions.Competition>

@{
    ViewData["Title"] = "Competitions";
}

<h2 class="">Competitions</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover text-center">
    <thead>
        <tr>
            <th width="30%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th width="10%">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th width="15%">
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th width="10%">
                @Html.DisplayNameFor(model => model.Rank)
            </th width="35%">
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                <a asp-controller="Collections" asp-action="Create" asp-route-competitionID="@item.ID">Register Collection</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
